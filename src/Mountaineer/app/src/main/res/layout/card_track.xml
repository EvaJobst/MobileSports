<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/tourIcWalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_walk"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tourAverageSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average: 1234"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toBottomOf="@id/tourIcWalk"
            app:layout_constraintLeft_toRightOf="@id/tourIcWalk" />

        <TextView
            android:id="@+id/tourSteps"
            android:layout_height="wrap_content"
            android:text="1234"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toTopOf="@id/tourAverageSteps"
            app:layout_constraintLeft_toRightOf="@id/tourIcWalk"
            android:layout_width="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="steps"
            app:layout_constraintBottom_toBottomOf="@id/tourSteps"
            app:layout_constraintLeft_toRightOf="@id/tourSteps" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/colorLightGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tourAverageSteps" />

        <TextView
            android:id="@+id/tourSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="Speed: 3km/h"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintLeft_toLeftOf="@id/tourIcWalk"
            app:layout_constraintTop_toBottomOf="@id/tourAverageSteps" />

        <TextView
            android:id="@+id/tourDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Distance: 123m"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintLeft_toLeftOf="@id/tourIcWalk"
            app:layout_constraintTop_toBottomOf="@id/tourSpeed" />

        <TextView
            android:id="@+id/tourElevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Elevation: 3m"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintLeft_toLeftOf="@id/tourIcWalk"
            app:layout_constraintTop_toBottomOf="@id/tourDistance" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>