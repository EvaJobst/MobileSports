<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/tourIcSun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_sun"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tourMinMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29°C/12°C"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toBottomOf="@id/tourIcSun"
            app:layout_constraintLeft_toRightOf="@id/tourIcSun" />

        <TextView
            android:id="@+id/tourTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toTopOf="@id/tourMinMaxTemp"
            app:layout_constraintLeft_toRightOf="@id/tourIcSun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="°C"
            app:layout_constraintBottom_toBottomOf="@id/tourTemp"
            app:layout_constraintLeft_toRightOf="@id/tourTemp" />

        <View
            android:layout_margin="8dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGrey"
            app:layout_constraintTop_toBottomOf="@id/tourMinMaxTemp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tourRain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:text="Rain: 0%"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintLeft_toLeftOf="@id/tourIcSun"
            app:layout_constraintTop_toBottomOf="@id/tourMinMaxTemp" />

        <TextView
            android:id="@+id/tourHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Humidity: 82%"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintLeft_toLeftOf="@id/tourIcSun"
            app:layout_constraintTop_toBottomOf="@id/tourRain" />

        <TextView
            android:id="@+id/tourWind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Wind: 3km/h"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintLeft_toLeftOf="@id/tourIcSun"
            app:layout_constraintTop_toBottomOf="@id/tourHumidity" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>